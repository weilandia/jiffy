<%= render partial: "shared/nav" %>
<div class="container">
  <div class="username">
    <%= @user.username.upcase %>
  </div>
  <div class="row">
    <%= render partial: "shared/categories" %>
    <div id="favorite_jifs" class="col-xs-9 show-header">
      <div id="jifs" class="row text-center jifs">
        <% if @user.jifs.empty? %>
          No jifs yet!
        <% else %>
          <% @user.jifs.each do |jif| %>
          <div class="col-xs-6 col-sm-4 col-md-3 jif">
            <%= link_to image_tag(jif.jif_path, class: "jifs_images", width: "150", height: "150"), category_jif_path(jif.category_id, jif), {class: 'jif_path', id: "#{jif.id}-jif" } %>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
